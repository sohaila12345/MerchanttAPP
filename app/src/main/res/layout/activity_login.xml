<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".login">
    <ImageView android:layout_width="match_parent"
               android:layout_height="285dp"
              android:layout_marginTop="0dip"
               android:padding="0dip"
               android:src="@drawable/yu"
    >


    </ImageView>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginLeft="25dp" android:layout_marginRight="25dp"
            android:layout_marginTop="130dp">
        <ImageView
                android:layout_width="84dp"
                android:layout_height="72dp"
                app:srcCompat="@drawable/ic_baseline_person_24"
                android:id="@+id/profile_image"
                android:layout_marginLeft="110dp" android:layout_marginTop="20dp"
                tools:ignore="VectorDrawableCompat"/>
        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:drawableLeft="@drawable/ic_baseline_person_24"
                  android:layout_marginTop="100dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
                  android:hint="   Enter User Name">

        </EditText>

        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:drawableRight="@drawable/ic_baseline_visibility_24"
                  android:drawableLeft="@drawable/ic_baseline_lock_24"
                  android:layout_marginTop="200dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
                  android:hint="   Enter Your Password" android:id="@+id/editText11">

        </EditText>
        <Button
                android:text="LOGIN"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:textColor="#ffff"
                android:id="@+id/login"
                android:layout_marginTop="280dp"
                android:layout_marginLeft="50dp"
                android:background="#439747"
        />
        <TextView
                android:text="Create New Account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/sign_up" android:layout_marginLeft="80dp"
                android:layout_marginTop="330dp"/>
    </androidx.cardview.widget.CardView>
    <TextView
            android:text="My Account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/my_account"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="60dp"
            android:textColor="#FFFFFF"
            android:textSize="28sp"/>

</RelativeLayout>