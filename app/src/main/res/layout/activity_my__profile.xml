<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".My_Profile">

    <ImageView android:layout_width="match_parent"
               android:layout_height="285dp"
               android:layout_marginTop="0dip"
               android:padding="0dip"
               android:src="@drawable/yu"
    >


    </ImageView>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginLeft="25dp" android:layout_marginRight="25dp"
            android:layout_marginTop="130dp">
        <ImageView
                android:layout_width="84dp"
                android:layout_height="72dp"
                app:srcCompat="@drawable/ic_baseline_person_24"
                android:id="@+id/profile_image"
                android:layout_marginLeft="110dp" android:layout_marginTop="20dp"
                tools:ignore="VectorDrawableCompat"/>
        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:drawableLeft="@drawable/ic_baseline_person_24"
                  android:layout_marginTop="100dp"
                  android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
                  android:hint="  Soban Malik">

        </EditText>

        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:drawableLeft="@drawable/ic_baseline_email_24"
                  android:layout_marginTop="200dp"
                  android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"
                  android:hint="  sobankhn4@gmail.com"
                  android:id="@+id/editText11">

        </EditText>
        <Button
                android:text="Save "
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:textColor="#ffff"
                android:id="@+id/login"
                android:layout_marginTop="280dp"
                android:layout_marginLeft="50dp"
                android:background="#439747"
        />
        <TextView
                android:text="Reset Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView33" android:layout_marginLeft="100dp"
                android:layout_marginStart="100dp" android:layout_marginTop="330dp"/>

    </androidx.cardview.widget.CardView>
    <TextView
            android:text="My Profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/my_account"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="60dp"
            android:textColor="#FFFFFF"
            android:textSize="28sp"/>
</RelativeLayout>