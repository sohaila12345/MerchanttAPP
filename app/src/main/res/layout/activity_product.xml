<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Product" android:background="#ffff">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="285dp"
            app:srcCompat="@drawable/yu"
            android:id="@+id/imageView11"/>
    <androidx.appcompat.widget.Toolbar
            android:id="@+id/actionbar"
            android:background="@drawable/border"

            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:title="New Product"
            app:titleMarginStart="100dp"
            app:titleTextColor="#FFFFFF">


    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="85dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_layout">
        <ScrollView android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="110dp"
                    android:layout_marginBottom="10dp">


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_marginBottom="5dp"
                        app:cardCornerRadius="8dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp" android:layout_marginTop="3dp">
                    <TextView
                            android:text="Min. Quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView13"
                            android:layout_marginLeft="17dp"
                            android:layout_marginTop="295dp"/>
                    <TextView
                            android:text="Price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView14"
                            android:layout_marginLeft="17dp"
                            android:layout_marginTop="573dp"/>
                    <TextView
                            android:text="Weight in kg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView16"
                            android:layout_marginLeft="17dp"
                            android:layout_marginTop="430dp"/>
                    <TextView
                            android:text="Price in kg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView15"
                            android:layout_marginLeft="17dp"
                            android:layout_marginTop="505dp"/>
                    <TextView
                            android:text="Quality per unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView10"
                            android:layout_marginLeft="17dp"
                            android:layout_marginTop="363dp"/>
                    <TextView
                            android:text="Brand Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView8"
                            android:layout_marginLeft="17dp"
                            android:layout_marginTop="88dp"/>
                    <TextView
                            android:text="Product Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView9"
                            android:layout_marginLeft="17dp"
                            android:layout_marginTop="17dp"/>
                    <TextView
                            android:text="Category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView11"
                            android:layout_marginLeft="17dp"
                            android:layout_marginTop="232dp"/>
                    <TextView
                            android:text="Description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView12"
                            android:layout_marginLeft="17dp"
                            android:layout_marginTop="160dp"/>
                    <EditText android:layout_width="match_parent"
                              android:layout_height="37dp"
                              android:layout_marginLeft="17dp" android:layout_marginRight="20dp"
                              android:layout_marginTop="45dp" android:textSize="16sp"
                              android:textColorHint="#D3CFCF" android:textColor="#3A3030" android:hint="Product Name">

                    </EditText>
                    <EditText android:layout_width="match_parent"
                              android:layout_height="37dp" android:layout_marginLeft="17dp"
                              android:layout_marginRight="20dp"
                              android:layout_marginTop="320dp" android:id="@+id/editText" android:textSize="16sp"
                              android:textColor="#3A3030" android:hint="Quantity" android:textColorHint="#D3CFCF">

                    </EditText>
                    <EditText android:layout_width="match_parent"
                              android:layout_height="37dp" android:layout_marginLeft="17dp"
                              android:layout_marginRight="20dp"
                              android:layout_marginTop="595dp"
                              android:id="@+id/editText5"
                              android:textSize="16sp"
                              android:textColor="#3A3030" android:textColorHint="#D4D8D5" android:hint="Price"
                              android:textColorLink="#D3CFCF">

                    </EditText>
                    <EditText android:layout_width="match_parent"
                              android:layout_height="37dp" android:layout_marginLeft="17dp"
                              android:layout_marginRight="20dp"
                              android:layout_marginTop="458dp" android:id="@+id/editText7" android:textSize="16sp"
                              android:textColor="#3A3030" android:textColorHint="#D4D8D5" android:hint="Weight"
                              android:textColorLink="#D3CFCF">

                    </EditText>
                    <EditText android:layout_width="match_parent"
                              android:layout_height="37dp" android:layout_marginLeft="17dp"
                              android:layout_marginRight="20dp"
                              android:layout_marginTop="530dp" android:id="@+id/editText8" android:textSize="16sp"
                              android:textColor="#3A3030" android:textColorHint="#D4D8D5" android:hint="Price"
                              android:textColorLink="#D3CFCF">

                    </EditText>
                    <EditText android:layout_width="match_parent"
                              android:layout_height="37dp" android:layout_marginLeft="17dp"
                              android:layout_marginRight="125dp"
                              android:layout_marginTop="385dp" android:id="@+id/editText6" android:textSize="16sp"
                              android:textColor="#3A3030" android:textColorHint="#D3CFCF" android:hint="Quantity">

                    </EditText>
                    <EditText android:layout_width="match_parent"
                              android:layout_height="37dp" android:layout_marginLeft="17dp"
                              android:layout_marginRight="20dp"
                              android:layout_marginTop="187dp" android:id="@+id/editText3" android:textSize="16sp"
                              android:textColor="#3A3030" android:hint="Description"
                              android:textColorHint="#D3CFCF">

                    </EditText>
                    <EditText android:layout_width="match_parent"
                              android:layout_height="40dp" android:layout_marginLeft="17dp"
                              android:layout_marginRight="20dp"
                              android:layout_marginTop="115dp" android:id="@+id/editText4" android:textSize="16sp"
                              android:textColorHint="#D3CFCF" android:textColor="#3A3030" android:hint="Brand Name">

                    </EditText>
                    <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/spinner7"
                            android:layout_marginTop="260dp"
                            android:layout_marginLeft="20dp" android:layout_marginRight="25dp"/>
                    <Button
                            android:text="Save"
                            android:layout_width="65dp"
                            android:layout_height="30dp" android:id="@+id/button2"
                            android:layout_marginTop="640dp"

                            android:layout_marginLeft="55dp"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/roundedd" android:layout_marginBottom="3dp"/>
                    <Button
                            android:text="Cancel"
                            android:layout_width="65dp"
                            android:layout_height="30dp" android:id="@+id/button3"
                            android:layout_marginTop="640dp"
                            android:background="@drawable/roundedd"
                            android:layout_marginLeft="145dp"
                            android:textColor="#FFFFFF" android:layout_marginBottom="3dp"/>
                    <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/spinner8"
                            android:layout_marginTop="385dp" android:layout_marginLeft="205dp"
                            android:layout_marginRight="20dp"/>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </ScrollView>
        <ImageView
                android:layout_width="200dp"
                android:layout_height="78dp"

                app:srcCompat="@drawable/ic_baseline_photo_camera_24"
                android:id="@+id/imageView12" android:layout_marginTop="10dp"
                android:layout_marginLeft="60dp"
                tools:ignore="VectorDrawableCompat" android:padding="5dp"/>
        <Button
                android:text="Uplaod Image"
                android:layout_width="138dp"
                android:layout_height="24dp"
                android:drawableRight="@drawable/ic_baseline_cloud_upload_24"
                android:background="@drawable/button_rounded"
                android:id="@+id/button" android:layout_marginTop="80dp"
                android:layout_marginLeft="84dp" android:padding="4dp" android:textSize="12sp"/>

    </RelativeLayout>
    <ImageView
            android:layout_width="60dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24"
            android:id="@+id/imageView8" android:layout_marginTop="20dp" tools:ignore="VectorDrawableCompat"/>


</RelativeLayout>