<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Sign_Up">
    <ImageView android:layout_width="match_parent"
               android:layout_height="285dp"
               android:layout_marginTop="0dip"
               android:padding="0dip"
               android:src="@drawable/yu"
    >


    </ImageView>
    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"

                >
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_width="84dp"
                android:layout_height="72dp"
                app:srcCompat="@drawable/ic_baseline_person_24"
                android:id="@+id/profile_image"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="20dp"
                tools:ignore="VectorDrawableCompat"/>
        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="100dp"
                  android:drawableLeft="@drawable/ic_baseline_account_balance_24"
                  android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"
                  android:hint=" Company Name"
                  android:textSize="14dip"
                  android:id="@+id/company_name">

        </EditText>

        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="240dp"
                  android:drawableLeft="@drawable/ic_baseline_phone_android_24"
                  android:hint=" Support Phone Number"
                  android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"
                  android:id="@+id/Number"
                  android:textSize="14dip">

        </EditText>
        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="310dp"
                  android:layout_marginLeft="20dp"
                  android:drawableLeft="@drawable/ic_baseline_person_24"
                  android:layout_marginRight="20dp"
                  android:hint=" Contact Name"
                  android:id="@+id/name" android:textSize="14dip">

        </EditText>
        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="380dp"
                  android:drawableLeft="@drawable/ic_baseline_email_24"
                  android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"
                  android:hint=" Email"
                  android:id="@+id/email" android:textSize="14dip">

        </EditText>
        <EditText android:layout_width="200dp"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="450dp"
                  android:layout_marginLeft="20dp"
                  android:drawableLeft="@drawable/ic_baseline_location_on_24"
                  android:layout_marginRight="20dp"
                  android:hint=" Area"
                  android:id="@+id/areaa" android:textSize="14dip">

        </EditText>
        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:drawableLeft="@drawable/ic_baseline_phone_android_24"
                  android:layout_marginTop="170dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
                  android:hint=" Phone Number"
                  android:id="@+id/phone_number"
                  android:textSize="14dip">

        </EditText>
        <Button
                android:text="Cancel"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:textColor="#ffff"
                android:id="@+id/cancel"
                android:layout_marginBottom="20dip"
                android:layout_marginTop="520dp"
                android:layout_marginLeft="170dp"
                android:background="#439747"
        />
        <Button
                android:text="Save"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:textColor="#ffff"
                android:id="@+id/save"
                android:layout_marginBottom="20dip"
                android:layout_marginTop="520dp"
                android:layout_marginLeft="50dp"
                android:background="#439747"
        />
        <Button
                android:text="Pin Area"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:textColor="#ffff"
                android:id="@+id/Area"
                android:layout_marginTop="450dp"
                android:layout_marginLeft="225dp"
                android:background="#439747"
        />
    </androidx.cardview.widget.CardView>

    </ScrollView>
    <TextView
            android:text="My Account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/my_account"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="30dp"
            android:textColor="#FFFFFF"
            android:textSize="28sp"/>

</RelativeLayout>